{
  "kind": "Template",
  "apiVersion": "v1",
  "labels": {
    "app": "openshift-launchpad",
    "template": "openshift-launchpad-server"
  },
  "metadata": {
    "name": "openshift-launchpad-server-dc"
  },
  "parameters": [
    {
      "name": "NAMESPACE",
      "required": true
    },
    {
      "name": "POSTGRESQL_USER",
      "required": true
    },
    {
      "name": "POSTGRESQL_PASSWORD",
      "required": true
    },
    {
      "name": "DATABASE_SERVICE_NAME",
      "value": "db-service"
    },
    {
      "name": "POSTGRESQL_DATABASE",
      "value": "sample_db"
    }
  ],
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "name": "openshift-launchpad-server"
      },
      "spec": {
        "host": "",
        "port": {
          "targetPort": "web"
        },
        "to": {
          "kind": "Service",
          "name": "openshift-launchpad-server-service",
          "weight": 100
        },
        "wildcardPolicy": "None"
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "openshift-launchpad-server"
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "activeDeadlineSeconds": 21600,
          "rollingParams": {
            "post": {
            "execNewPod": {
                "command": [
                "flask",
                "db",
                "upgrade"
                ],
                "containerName": "openshift-launchpad-server"
            },
            "failurePolicy": "ignore"
            }
          }
        },
        "triggers": [
          {
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "openshift-launchpad-server"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "openshift-launchpad-server:latest",
                "namespace": "${NAMESPACE}"
              }
            },
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "name": "openshift-launchpad-server"
        },
        "template": {
          "metadata": {
            "name": "openshift-launchpad-server",
            "labels": {
              "name": "openshift-launchpad-server"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "openshift-launchpad-server",
                "image": " ",
                "ports": [
                  {
                    "containerPort": 5000,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "DATABASE_URL",
                    "value": "postgres://${POSTGRESQL_USER}:${POSTGRESQL_PASSWORD}@${DATABASE_SERVICE_NAME}:5432/${POSTGRESQL_DATABASE}"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "500m",
                    "memory": "2Gi"
                  },
                  "requests": {
                    "cpu": "100m",
                    "memory": "512Mi"
                  }
                },
                "terminationMessagePath": "/dev/termination-log",
                "terminationMessagePolicy": "File",
                "imagePullPolicy": "IfNotPresent"
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "openshift-launchpad-server-service"
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "protocol": "TCP",
            "port": 5000,
            "targetPort": 5000
          }
        ],
        "selector": {
          "name": "openshift-launchpad-server"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    }
  ]
}
