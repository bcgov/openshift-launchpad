{
    "apiVersion": "v1",
    "kind": "Template",
    "labels": {
      "app": "openshift-launchpad",
      "template": "openshift-launchpad-database"
    },
    "metadata": {
      "name": "db-build-config"
    },
    "parameters": [
      {
        "name": "NAMESPACE",
        "required": true
      }
    ],
    "objects": [
      {
        "apiVersion": "v1",
        "kind": "ImageStream",
        "metadata": {
            "annotations": {
                "openshift.io/display-name": "PostgreSQL"
            },
            "name": "postgresql",
            "namespace": "${NAMESPACE}"
        },
        "spec": {
            "tags": [
              {
                "from": {
                    "kind": "DockerImage",
                    "name": "docker.io/centos/postgresql-10-centos7:latest"
                },
                "name": "10",
                "referencePolicy": {
                    "type": "Local"
                }
              }
            ]
        }
      }
    ]
  }
