{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {
    "app": "openshift-launchpad",
    "template": "openshift-launchpad-client"
  },
  "metadata": {
    "name": "openshift-launchpad"
  },
  "parameters": [
    {
      "name": "NAMESPACE",
      "required": true
    },
    {
      "name": "API_URL",
      "required": true
    }
  ],
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "annotations": {
          "description": "Keeps track of changes in the application image"
        },
        "name": "openshift-launchpad-client",
        "namespace": "${NAMESPACE}"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "BuildConfig",
      "metadata": {
        "annotations": {
          "description": "Defines how to build the application",
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "name": "openshift-launchpad-client-bc"
      },
      "spec": {
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "openshift-launchpad-client:latest",
            "namespace": "${NAMESPACE}"
          }
        },
        "source": {
          "contextDir": "client",
          "git": {
            "ref": "origin/deployment-v2",
            "uri": "https://github.com/bcgov/openshift-launchpad"
          },
          "type": "Git"
        },
        "strategy": {
          "type": "Docker",
          "dockerStrategy": {
            "env": [
              {
                "name": "API_URL",
                "value": "${API_URL}/api"
              }
            ]
          }
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ]
}
