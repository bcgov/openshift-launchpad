{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {
    "app": "openshift-launchpad",
    "template": "openshift-launchpad-client"
  },
  "metadata": {
    "annotations": {
      "description": "An example Node.js application with no database. For more information about using this template, including OpenShift considerations, see https://github.com/sclorg/nodejs-ex/blob/master/README.md."
    },
    "name": "openshift-launchpad"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "annotations": {
          "description": "Keeps track of changes in the application image"
        },
        "name": "openshift-launchpad-client",
        "namespace": "${NAMESPACE}"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "BuildConfig",
      "metadata": {
        "annotations": {
          "description": "Defines how to build the application",
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "name": "openshift-launchpad-client-bc"
      },
      "spec": {
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "openshift-launchpad-client:latest",
            "namespace": "${NAMESPACE}"
          }
        },
        "source": {
          "contextDir": "client",
          "git": {
            "ref": "origin/deployment-v2",
            "uri": "https://github.com/bcgov/openshift-launchpad"
          },
          "type": "Git"
        },
        "strategy": {
          "type": "Docker"
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "displayName": "Namespace",
      "name": "NAMESPACE",
      "required": true
    },
    {
      "description": "Minishift cluster IP address",
      "displayName": "Cluster IP",
      "name": "CLUSTER_IP",
      "required": true
    }
  ]
}
