{
    "kind": "Template",
    "apiVersion": "v1",
    "labels": {
      "template": "openshift-launchpad"
    },
    "metadata": {
      "name": "server-build-config"
    },
    "objects": [
      {
        "kind": "ImageStream",
        "apiVersion": "v1",
        "metadata": {
          "name": "server-application-image"
        }
      },
      {
        "kind": "BuildConfig",
        "apiVersion": "v1",
        "metadata": {
          "name": "server-bc"
        },
        "spec": {
          "completionDeadlineSeconds": 600,
          "triggers": [
            {
              "type": "ImageChange"
            },
            {
              "type": "ConfigChange"
            }
          ],
          "runPolicy": "SerialLatestOnly",
          "source": {
            "type": "Git",
            "git": {
              "uri": "https://github.com/bcgov/openshift-launchpad",
              "ref": "origin/deployment"
            },
            "contextDir": "server"
          },
          "strategy": {
            "type": "Docker"
          },
          "output": {
            "to": {
              "kind": "ImageStreamTag",
              "name": "server-application-image:latest"
            }
          },
          "resources": {
            "limits": {
              "cpu": "500m",
              "memory": "3Gi"
            },
            "requests": {
              "cpu": "100m",
              "memory": "2Gi"
            }
          }
        }
      }
    ]
  }
