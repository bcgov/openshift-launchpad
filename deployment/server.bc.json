{
  "kind": "Template",
  "apiVersion": "v1",
  "labels": {
    "app": "${APP_NAME}",
    "template": "${APP_NAME}-server"
  },
  "parameters": [
    {
      "name": "NAMESPACE",
      "required": true
    },
    {
      "name": "APP_NAME",
      "required": true
    },
    {
      "name": "BRANCH",
      "required": true
    }
  ],
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}-server"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}-server"
      },
      "spec": {
        "completionDeadlineSeconds": 600,
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "runPolicy": "SerialLatestOnly",
        "source": {
          "type": "Git",
          "git": {
            "uri": "https://github.com/bcgov/openshift-launchpad",
            "ref": "origin/${BRANCH}"
          },
          "contextDir": "server"
        },
        "strategy": {
          "type": "Docker"
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${APP_NAME}-server:latest",
            "namespace": "${NAMESPACE}"
          }
        },
        "resources": {
          "limits": {
            "cpu": "500m",
            "memory": "3Gi"
          },
          "requests": {
            "cpu": "100m",
            "memory": "2Gi"
          }
        }
      }
    }
  ]
}
