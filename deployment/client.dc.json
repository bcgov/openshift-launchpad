{
  "apiVersion": "v1",
  "kind": "Template",
  "labels": {
    "app": "openshift-launchpad",
    "template": "openshift-launchpad-client"
  },
  "metadata": {
    "annotations": {
      "description": "An example Node.js application with no database. For more information about using this template, including OpenShift considerations, see https://github.com/sclorg/nodejs-ex/blob/master/README.md."
    },
    "name": "openshift-launchpad"
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "description": "Exposes and load balances the application pods"
        },
        "name": "openshift-launchpad-client-service"
      },
      "spec": {
        "ports": [
          {
            "name": "web",
            "port": 3000,
            "targetPort": 3000
          }
        ],
        "selector": {
          "name": "openshift-launchpad-client-dc"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "name": "openshift-launchpad-client-route"
      },
      "spec": {
        "host": "",
        "to": {
          "kind": "Service",
          "name": "openshift-launchpad-client-service"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "annotations": {
          "description": "Defines how to deploy the application server",
          "template.alpha.openshift.io/wait-for-ready": "true"
        },
        "name": "openshift-launchpad-client-dc"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "name": "openshift-launchpad-client-dc"
        },
        "strategy": {
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "openshift-launchpad-client-dc"
            },
            "name": "openshift-launchpad-client-dc"
          },
          "spec": {
            "containers": [
              {
                "env": [],
                "image": " ",
                "livenessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 3000
                  },
                  "initialDelaySeconds": 30,
                  "timeoutSeconds": 3
                },
                "name": "openshift-launchpad-client",
                "ports": [
                  {
                    "containerPort": 3000
                  }
                ],
                "readinessProbe": {
                  "httpGet": {
                    "path": "/",
                    "port": 3000
                  },
                  "initialDelaySeconds": 3,
                  "timeoutSeconds": 3
                },
                "resources": {
                  "limits": {
                    "memory": "2Gi"
                  }
                }
              }
            ]
          }
        },
        "triggers": [
          {
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "openshift-launchpad-client"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "openshift-launchpad-client:latest",
                "namespace": "${NAMESPACE}"
              }
            },
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "description": "The OpenShift Namespace where the ImageStream resides.",
      "displayName": "Namespace",
      "name": "NAMESPACE",
      "required": true
    }
  ]
}
